# Terraform Variables Example File
# Copy this file to terraform.tfvars and update with your values

# Project Configuration
project_name = "crypto-market-analysis-saas"
environment  = "dev"
owner_email  = "your-email@example.com"

# AWS Configuration
aws_region = "us-east-1"

# Network Configuration
# Option 1: Use existing VPC and subnet
# vpc_id    = "vpc-xxxxxxxxx"
# subnet_id = "subnet-xxxxxxxxx"

# Option 2: Create new VPC and subnet (leave vpc_id and subnet_id empty)
vpc_cidr           = "10.0.0.0/16"
public_subnet_cidr = "10.0.1.0/24"

# Security Configuration
# IMPORTANT: Replace with your actual public IP address
# You can find your IP at: https://whatismyipaddress.com/
# Format: "YOUR.IP.ADDRESS.HERE/32"
dev_workstation_cidr = "203.0.113.42/32"  # CHANGE THIS TO YOUR IP

# EC2 Configuration
instance_type       = "t3.micro"  # Free tier eligible
root_volume_size    = 20          # GB
postgres_volume_size = 50         # GB

# Key Pair Configuration
# Option 1: Create new key pair
create_key_pair    = true
public_key_content = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC... your-public-key-here"

# Option 2: Use existing key pair
# create_key_pair        = false
# existing_key_pair_name = "my-existing-key"

# Application Configuration
domain_name = "crypto-ai.crypto-vision.com"  # Change to your domain

# Monitoring Configuration
log_retention_days = 30

# Feature Flags
enable_detailed_monitoring    = true
enable_backup                = true
enable_termination_protection = false
enable_stop_protection       = false

# Backup Configuration
backup_retention_days = 7
backup_schedule      = "cron(0 2 * * ? *)"  # Daily at 2 AM UTC

# Additional Tags (optional)
additional_tags = {
  CostCenter = "Engineering"
  Team       = "DevOps"
  Purpose    = "Crypto Analysis SaaS"
}

# Example configurations for different environments:

# Development Environment
# instance_type = "t3.micro"
# postgres_volume_size = 20
# log_retention_days = 7
# enable_backup = false

# Production Environment
# instance_type = "t3.small"
# postgres_volume_size = 100
# log_retention_days = 90
# enable_backup = true
# enable_termination_protection = true
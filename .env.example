# =============================================================================
# Crypto Market Analysis SaaS - Environment Configuration Template
# =============================================================================
# Copy this file to 'local-env' for local development or 'aws-env' for AWS
# deployment and fill in the required values.
# =============================================================================

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
ENVIRONMENT=local  # local or production

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://crypto_user:crypto_pass@localhost:5432/crypto_db
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# -----------------------------------------------------------------------------
# Web UI Configuration
# -----------------------------------------------------------------------------
WEB_UI_HOST=crypto-ai.local
WEB_UI_PORT=10443
WEB_UI_PROTOCOL=https

# -----------------------------------------------------------------------------
# SSL Certificate (Required for HTTPS)
# -----------------------------------------------------------------------------
SSL_CERT_PATH=./certs/local/cert.pem
SSL_KEY_PATH=./certs/local/key.pem

# -----------------------------------------------------------------------------
# Data Collection Configuration
# -----------------------------------------------------------------------------
# Start date for historical data collection (YYYY-MM-DD)
COLLECTION_START_DATE=2024-01-01

# Number of top cryptocurrencies to track by market cap
TOP_N_CRYPTOS=50

# Cron expression for automated collection schedule
# Default: Every 6 hours (0 */6 * * *)
COLLECTION_SCHEDULE=0 */6 * * *

# Binance API credentials (optional for free tier)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# -----------------------------------------------------------------------------
# Prediction Engine Configuration
# -----------------------------------------------------------------------------
# Model type: LSTM or GRU
MODEL_TYPE=LSTM

# Prediction horizon in hours
PREDICTION_HORIZON_HOURS=24

# Cron expression for model retraining schedule
# Default: Weekly on Sunday at 2 AM (0 2 * * 0)
MODEL_RETRAIN_SCHEDULE=0 2 * * 0

# Sequence length for time series (hours of historical data)
# Default: 168 hours (7 days)
SEQUENCE_LENGTH=168

# -----------------------------------------------------------------------------
# GenAI Configuration (OpenAI)
# -----------------------------------------------------------------------------
# REQUIRED: OpenAI API key
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI model to use
OPENAI_MODEL=gpt-4o-mini

# Maximum tokens for response
OPENAI_MAX_TOKENS=500

# Temperature for response generation (0.0 - 1.0)
OPENAI_TEMPERATURE=0.7

# -----------------------------------------------------------------------------
# Alert System Configuration
# -----------------------------------------------------------------------------
# Enable/disable alert system
ALERT_ENABLED=true

# Threshold percentage for market shift detection
ALERT_THRESHOLD_PERCENT=10.0

# Cooldown period between alerts for same crypto (hours)
ALERT_COOLDOWN_HOURS=4

# SMS provider: twilio or aws_sns
SMS_PROVIDER=twilio

# Phone number to receive alerts (E.164 format: +1234567890)
SMS_PHONE_NUMBER=+1234567890

# Twilio Configuration (if SMS_PROVIDER=twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM_NUMBER=+1234567890

# AWS SNS Configuration (if SMS_PROVIDER=aws_sns)
AWS_SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:crypto-alerts

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=5000

# Require API key authentication
API_KEY_REQUIRED=false

# Rate limit per minute per API key
RATE_LIMIT_PER_MINUTE=100

# -----------------------------------------------------------------------------
# Streamlit Dashboard Configuration
# -----------------------------------------------------------------------------
STREAMLIT_PORT=8501

# -----------------------------------------------------------------------------
# AWS Configuration (for AWS deployment)
# -----------------------------------------------------------------------------
AWS_REGION=us-east-1

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# IMPORTANT: Change this to a random secret key in production!
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=local_dev_secret_key_change_in_production

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=https://crypto-ai.local:10443

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/crypto_saas.log
